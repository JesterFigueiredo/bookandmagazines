<% if(message){ %>
    <div class="alert alert-primary" role="alert">
        <%=message%>
      </div>
<%}%>


<div class="container">
    <div class=" text-center mt-5 ">

        <h1 >ADD BOOK</h1>

    </div>
<div class="row ">
  <div class="col-lg-7 mx-auto">
    <div class="card mt-2 mx-auto p-4 bg-light">
        <div class="card-body bg-light">
   
        <div class = "container">
        <form name="addbook" method="POST" action="/add_book">
        <div class="controls">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="form_name">Title *</label>
                        <input id="form_name" type="text" name="title" class="form-control" placeholder="Please enter title *" required="required" data-error="Please enter a title">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="form_lastname">ISBN *</label>
                        <input id="form_lastname" type="text" name="isbn" class="form-control" placeholder="Please enter ISBN *" required="required" data-error="Lastname is required.">
                                                        </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="form_email">Authors *</label>
                        <input id="form_email" type="email" name="author" class="form-control" placeholder="Please enter Author's eamil *" required="required" data-error="Valid email is required.">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="form_message">Description/Published At *</label>
                        <textarea id="form_message" name="description" class="form-control" placeholder="Add Description or Date" rows="4" required="required" data-error="Please, leave us a message."></textarea
                            >
                        </div>

                    </div>


                <div class="col-md-12">
                    
                    <input type="submit" class="btn btn-success btn-send  pt-2 btn-block
                        " value="submit" onclick="add_book()" >
                
            </div>
      
            </div>


    </div>
     </form>
    </div>
        </div>


</div>
    <!-- /.8 -->

</div>
<!-- /.row-->

</div>
</div>

<script src="/js/add_book.js"></script>